<aura:component>

    <aura:attribute name="selectedAlgorithm" type="String" default="intent" />

    <div class="slds-form-element slds-m-bottom_large slds-m-left_large">
        <!-- Algorithm selector -->
        <lightning:select label="Select an algorithm" name="algorithmSelect" value="{!v.selectedAlgorithm}">
            <option text="Intent" value="intent" selected="true"/>
            <option text="Multilingual Intent" value="multilingual-intent"/>
            <option text="Multilingual Intent OOD" value="multilingual-intent-ood"/>
        </lightning:select>
    </div>

</aura:component>	
